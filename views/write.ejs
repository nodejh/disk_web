<% include _scripts.ejs %>

<script type="text/javascript">

  $('#comment').click(function() {
    var content =$('#content').val();

    if (!content) {
      return swal('评论内容不能为空！', '', 'error');
    }

    var data = {
      contentId: $('#id').val(),
      content: content,
    };
    console.log('data: ', data);
    $.post('/users/comment', data, function(res) {
      console.log('res: ', res);
      if (res.code === 0) {
        swal({
          title: '评论成功',
          text: '',
          type: 'success',
          confirmButtonText: '确定',
        }, function() {
          window.location.reload();
        });
      } else {
        swal(res.message, '', 'error');
      }
    });
  });


</script>

