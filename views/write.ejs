            <span style="margin-left:20px;font-size: 0.8em;"><%= content.date.toLocaleString() %></span>
            <% if (isCurrentUsers) { %>
              <a id="edit" href="/users/edit/<%= content.id %>" style="float:right;font-size: 0.9em;color: #3194d0; text-decoration: underline;">编辑</a>
            <% } %>
        </div>
        <div style="margin: 50px auto;">
          <%- content.content %>
        </div>

