<div>

<!-- 评论区 -->
<div style="margin-top: 100px; margin-bottom: 100px; max-width: 700px;">
  <!-- 评论列表 -->
    <% comment.forEach(function(item) { %>
      <div class="panel panel-default">
          <div class="panel-body">
            <a href="/lists/<%= item.uid %>" style="color: #545454;">
              <img src="/avatar/<%= item.avatar %>" style="border-radius: 50%;  width: 20px;">
              <%= item.name %>
              <span style="margin-left:20px"><%= content.date.toLocaleString() %></span>
            </a>
            <%- item.comment_content %>
          </div>
        </div>
      <% }) %>

  <hr>
  <textarea class="form-control" id="content" rows="4" placeholder="评论内容"></textarea>
  <button type="button" class="btn btn-success" id="comment" style="float:right;margin: 20px 0">发布评论</button>
</div>


