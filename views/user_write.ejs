<div class="container index">


    <div style="margin: 30px 20px">
        <form class="form">
            <div class="form-group">
                <label for="title">网址</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="url" placeholder="目前只支百度网盘的网址">
                    <span class="input-group-btn">
                                  <button class="btn btn-primary" id="getUrl" type="button" style="background-color: #ea6f5a;border-color: #ea6f5a;">获取内容</button>
                                </span>
                </div>
            </div>

            <!-- /input-group -->
            <div class="form-group">
                <label for="title">标题</label>
                <input type="text" class="form-control" id="title" placeholder="请输入网址标题">
            </div>
            <div class="form-group">
                <label for="title">分类</label>
                <select class="form-control" id="tags">
                    <option value="百度网盘网页">百度网盘网页</option>
                    <option value="百度网盘百度网盘电影">百度网盘电影</option>
                    <option value="百度网盘文档">百度网盘文档</option>
                    <option value="百度网盘视频">百度网盘视频</option>
                    <option value="百度网盘书籍">百度网盘书籍</option>
                    <option value="百度网盘音乐">百度网盘音乐</option>
                    <option value="百度网盘图片">百度网盘图片</option>
                    <option value="百度网盘其他">百度网盘其他</option>
                </select>
            </div>
        </form>

        <textarea id="editor" placeholder="请输入分享内容" autofocus></textarea>

        <div class="save" style="margin: 20px auto;">
            <button type="button" class="btn btn-primary" id="write" style="background-color: #ea6f5a;border-color: #ea6f5a;">分享</button>
        </div>

    </div>
</div>
